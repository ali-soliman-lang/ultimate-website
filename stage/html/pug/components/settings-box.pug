.setting-box.hide-setting 
    .toggle-settings
        i.fas.fa-cog.fa-lg
    .setting-content.text-center
        .option-box.color-options
            h4.option-title Color Option
            - var themes = ['green-theme',' blue-theme','red-theme','orange-theme']
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)

        .option-box
            h4.option-title Fonts option
        .option-box
            h4.option-title Sidebar option
